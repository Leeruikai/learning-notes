/* components/evaluationItem/evaluationItem.wxss */
.evaluation-item {
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 16rpx;
    box-sizing:border-box;
    padding: 15rpx 30rpx 30rpx 30rpx;
    box-shadow: 0 4rpx 8rpx rgba(176, 176, 176, .5);
}
.course-count, .content {
    font-size: 28rpx;
    line-height: 48rpx;
    margin-bottom: 20rpx;
}
.course-time, .teacher {
    font-size: 24rpx;
    opacity: .54;
}
.teacher {
    margin-top: 10rpx;
}
.evaluate-star-container {
    margin: 10rpx 0;
    display:inline-block;
}
star {
	display:inline-block;
	zoom: .75;
}
.star-desc {
	font-size: 24rpx;
	opacity: .54;
}
.blur {
	color: transparent;
    text-shadow: 0 0 9px rgba(0,0,0,0.3);
}