/* pages/editEvaluationPage/editEvaluationPage.wxss */
.comment-page-container {
    height: 100%;
    width: 100%;
}
.courseInfo {
	background-color: #fff;
	height: 186rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 16rpx 4rpx rgba(228, 228, 228, .5);
}
.student-name {
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.course-time {
	font-size: 24rpx;
    opacity: .32;
}

.finish-btn {
    border-radius: 8rpx;
    height: 80rpx;
    margin-top: 32rpx;
    background-color: #FFCE44;
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
}
.plan-content {
	padding: 46rpx;
}
.content-area {
    border: #DFDFDF solid 2rpx;
    height: 320rpx;
    overflow: scroll;
    padding: 30rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 16rpx;
    background-color: #fff;
}
.placeholder {
	opacity: .32;
	font-size: 28rpx;
	line-height: 48rpx;
}